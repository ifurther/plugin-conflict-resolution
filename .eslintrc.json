{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "node_modules/*",
        "api/*",
        "src/lib/*",
        "dist/*",
        "publish/*",
        "webpack.config.js",
        "jest.config.js"
    ],
    "rules": {
        "max-len": "off",
        "require-jsdoc": "off",
        "eqeqeq": "error",
        "indent": ["error", 4]
    }
}
